<!-- 轮播图 -->
<view class="swiper">
	<swiper
	 autoplay="{{true}}"
	 indicator-dots="{{true}}"
	 circular="{{true}}"
	 indicator-color="rgba(255, 255, 255, .6)"
	 indicator-active-color="#FFFFFf"
	>
		<swiper-item wx:for="{{imgUrl}}" wx:key="id">
			<image src="{{base}}{{item.imgUrl}}" mode="widthFix" />
		</swiper-item>
		
	</swiper>  
</view>
