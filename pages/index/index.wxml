        <view class="weui-cell__hd">
          <image style='height:30px;width:30px;' src='../../image/icon/info.png'></image>
        </view>
        <view class="weui-cell__bd">
          <input class="weui-input" type="text" placeholder-style="color:#ccc;font-size:26rpx;padding-left:20rpx;" placeholder="姓名" />
        </view>
      </view>
    </view>
    <view class="weui-cells weui-cells_form" style='background:rgba(255,255,255,.3);border-radius:5px;'>
      <view class="weui-cell" style="padding:20rpx;">
        <view class="weui-cell__hd">
          <image style='height:30px;width:30px;' src='../../image/icon/study.png'></image>
