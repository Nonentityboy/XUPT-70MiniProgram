<view class="content">
    <view class="input"><input type="text" placeholder="写下你的评论"confirm-type="send" /></view>
    <view class="send_btn"> <view>发布</view></view>   
</view>
<view class="page" wx:for="{{lists}}" wx:key="id">
    <view class="page_person">
       <view class="person_header"> 
            <view class="person_icon">
             <image src="../../image/icon/icon.png" mode="widthFix"/>
        </view>    
       <text>{{item.userName}}</text>
       </view>  
       <view class="page_address"><text>{{item.contents}}</text></view> 
       <view class="page_data"><text>{{item.createTime}}</text></view>
    </view>
    </view>
  